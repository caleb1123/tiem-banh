name: Deploy HTML

on:
  push:
    branches:
      - main  # branch bạn muốn trigger deploy

jobs:
  deploy:
    runs-on: self-hosted  # dùng runner bạn vừa setup
    steps:
      - uses: actions/checkout@v3
      - name: Copy HTML to deploy folder
        run: |
          mkdir -p deploy
          cp *.html deploy/
      - name: Commit & Push (optional)
        run: |
          git config user.name "namphan"
          git config user.email "namphan@example.com"
          git add deploy/
          git commit -m "Deploy HTML" || echo "Nothing to commit"
          git push origin main
